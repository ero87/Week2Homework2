<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardHeight"
    android:layout_margin="@dimen/magin">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heig1"
            android:gravity="center"
            android:text="@string/image_title1"
            android:textSize="@dimen/tetxs" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imaheheight"
            android:layout_marginVertical="@dimen/heig1"
            android:scaleType="centerCrop"
            android:src="@drawable/images78" />

        <ImageButton
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_shadow_end_color"
            android:src="@drawable/favorite" />

        <ImageButton
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/cardview_shadow_end_color"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/commentCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/comment"
            android:text="@string/text0"
            android:textColor="@color/with"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/likeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/like"
            android:text="@string/text0"
            android:textColor="@color/with"
            android:textSize="@dimen/textSize" />

    </RelativeLayout>


</android.support.v7.widget.CardView>